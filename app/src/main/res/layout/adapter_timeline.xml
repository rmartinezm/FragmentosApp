<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#fff">


    <TextView
        android:text="Title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:textSize="18sp"
        android:id="@+id/timeline_tv_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/timeline_image" />

    <TextView
        android:text="Text"
        android:id="@+id/timeline_tv_text"
        android:gravity="start"
        android:textAlignment="textStart"
        android:layout_below="@+id/timeline_tv_title"
        android:layout_alignLeft="@+id/timeline_tv_title"
        android:layout_alignStart="@+id/timeline_tv_title"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_width="250dp"
        android:layout_height="50dp" />

    <TextView
        android:text="User"
        android:layout_height="wrap_content"
        android:id="@+id/timeline_tv_user"
        android:textSize="18sp"
        android:layout_width="100dp"
        android:layout_below="@+id/timeline_image"
        android:layout_alignLeft="@+id/timeline_image"
        android:layout_alignStart="@+id/timeline_image" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="10dp"
        android:id="@+id/timeline_image"
        android:layout_alignBottom="@+id/timeline_tv_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
